@rendermode InteractiveServer

<MudThemeProvider />
<MudDialogProvider FullWidth="true"
                   MaxWidth="MaxWidth.Small"
                   CloseButton="true"
                   DisableBackdropClick="false"
                   NoHeader="false"
                   Position="DialogPosition.Center"
                   CloseOnEscapeKey="true" />
<MudSnackbarProvider />

<MudAppBar Elevation="1">
    <MudMenu Class="" Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" PopoverClass="drouf-popover">
        <SkudWebApplication.Components.Layout.DroufLayouts.MyNavMenu></SkudWebApplication.Components.Layout.DroufLayouts.MyNavMenu>
    </MudMenu>
    <MudText Typo="Typo.h5" Class="ml-3">Продмастер СКУД</MudText>
</MudAppBar>


@code {
    public bool _isOpen = false;

    public void ToggleOpen()
    {
        _isOpen = !_isOpen;
    }
}